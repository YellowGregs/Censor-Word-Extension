{
  "manifest_version": 3,
  "name": "Word Censor",
  "version": "1.0",
  "description": "Blurs slurs or bad words.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "options.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
